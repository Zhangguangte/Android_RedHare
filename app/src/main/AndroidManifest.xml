<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.santa.redhare">



    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".RedHareApplication"
        android:configChanges="keyboardHidden|orientation"
        android:screenOrientation="portrait">
        <activity android:name=".mainactivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".searchactivity.SearchActivity"
            android:theme="@style/AppThemeGray"
            android:windowSoftInputMode="stateAlwaysVisible">
        </activity>

        <activity android:name=".personactivity.PersonActivity"
            android:theme="@style/AppThemeWhite">
        </activity>

        <activity android:name=".chatactivity.ChatActivity"
            android:theme="@style/AppThemeWhite"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity android:name=".addressactivity.AddressActivity"
            android:theme="@style/AppThemeWhite"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity android:name=".topicactivity.TopicActivity">
        </activity>

        <activity android:name=".activityactivity.ActivityActivity">
        </activity>

        <activity android:name=".commentactivity.CommActivity"
            android:theme="@style/AppThemeWhite">
        </activity>

        <activity android:name=".imageselect.ImageSelectorActivity">
        </activity>

        <activity android:name=".addactivity.AddRedActivity"
            android:theme="@style/AppThemeGray">
        </activity>

        <activity android:name=".imageactivity.ImageActivity">
        </activity>
    </application>

</manifest>