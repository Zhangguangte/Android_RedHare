<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/red_all"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_small"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/main_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/main_title"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_big"
                android:textColor="@android:color/black"
                android:text="热门动态"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBg"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/main_headportrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/mine_checked"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/main_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="路人甲"/>
                <TextView
                    android:id="@+id/main_trade"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_small"
                    android:textColor="@color/colorTextLightGray"
                    android:text="互联网／软件"/>
                <TextView
                    android:id="@+id/main_job"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_small"
                    android:textColor="@color/colorTextLightGray"
                    android:text="开发"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/main_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_small"
                    android:textColor="@color/colorTextLightGray"
                    android:text="领英中国"/>
                <TextView
                    android:id="@+id/main_station"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_small"
                    android:textColor="@color/colorTextLightGray"
                    android:text="工程经理"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/main_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/colorTextLightGray"
            android:text="同行业"/>
    </LinearLayout>
    <com.example.santa.redhare.redharefragment.ShrinkText
        android:id="@+id/main_connent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:st_textColor="@android:color/black"
        app:st_textColorDetail="@color/colorMoreDetail"/>

    <com.example.santa.redhare.redharefragment.AllGridView
        android:id="@+id/main_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--<TextView-->
        <!--android:id="@+id/main_connent"-->
        <!--android:layout_marginTop="@dimen/margin_small"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="@dimen/textsize_big"-->
        <!--android:maxLines="6"-->
        <!--android:ellipsize="end"/>-->
    <!--<TextView-->
        <!--android:id="@+id/main_more"-->
        <!--android:layout_marginTop="@dimen/margin_small"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@color/colorMoreDetail"-->
        <!--android:textSize="@dimen/textsize_big"-->
        <!--android:text="查看详情"/>-->

    <ImageView
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg"/>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/red_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/share"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsize_normal"
                    android:textColor="@color/colorTextDefMenu"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/red_biglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/red_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/like"/>
                <TextView
                    android:id="@+id/red_bignum"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsize_normal"
                    android:textColor="@color/colorTextDefMenu"
                    android:text="23"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/red_commlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/comment"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsize_normal"
                    android:textColor="@color/colorTextDefMenu"
                    android:text="8"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>